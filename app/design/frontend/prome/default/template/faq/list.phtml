<?php
$_itemArray = $this->getItemArrayByCategory();
$_categories = $this->getCategoryCollection();
$_helper = $this->helper('faq');
?>

<div class="faq" id="faq">
    <div class="block-faq">
        <div class="block-title">
            <strong>
                <span><?php echo $_helper->__('F.A.Q') ?></span>
            </strong>
        </div>
        <div class="block-content">
            <?php foreach ($_categories as $_category): ?>
                <?php if (isset($_itemArray[$_category->getId()])) :?>
                    <ul class="list-item row">
                        <?php $i = 1; ?>
                        <?php foreach ($_itemArray[$_category->getId()] as $_itemId => $_item): ?>
                            <li class="item" data-item-id="<?php echo $_itemId?>">
                                <h4 class="question"><span><?php echo $i++; ?>.</span><?php echo $_item->getQuestion() ?></h4>
                                <div class="answer"><?php echo $_item->getResponse() ?></div>
                            </li>
                        <?php endforeach ?>
                    </ul>
                <?php endif; ?>
            <?php endforeach ?>
        </div>
    </div>
</div>