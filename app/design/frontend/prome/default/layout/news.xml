<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="right">
            <remove name="right.clnews.menu"/>
            <remove name="right.clnews.latest"/>
        </reference>
        <reference name="left">
            <remove name="left.clnews.menu"/>
        </reference>
    </default>

    <clnews_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/lib/masonry.pkgd.min.js</name></action>
        </reference>
        <reference name="content">
            <block type="clnews/news" name="top-news" template="clnews/top.phtml" before="-"/>
            <block type="page/html_breadcrumbs" name="breadcrumbs" as="breadcrumbs" before="news">
                <action method="addCrumb" translate="info.label info.title">
                    <name>home</name>
                    <info>
                        <label>Home</label>
                        <title>Go to Home Page</title>
                        <link>{{baseSecureUrl}}</link>
                        <first>1</first>
                        <last>0</last>
                    </info>
                </action>
                <action method="addCrumb" translate="info.label info.title">
                    <name>News</name>
                    <info>
                        <label>News</label>
                        <title>News</title>
                        <link />
                        <first>0</first>
                        <last>1</last>
                    </info>
                </action>
            </block>
        </reference>
    </clnews_index_index>

    <clnews_newsitem_view>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </clnews_newsitem_view>
</layout>