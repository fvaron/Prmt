/**
 * @see Mage_Adminhtml_Block_Sales_Order_Create_Items_Grid
 */

if ($this->helper('request4quote')->isRentalInstalled() && !$this->helper('request4quote')->isPPRWarehouseInstalled() && !$this->helper('request4quote')->isOpenendedInstalled()) {
$templateFile = Mage::getDesign()->getTemplateFilename('request4quote/quote/create/items/grid_original.phtml', array(
'_area' => $this->getArea(),
'_relative' => false
));
}else if ($this->helper('request4quote')->isPPRWarehouseInstalled() && !$this->helper('request4quote')->isOpenendedInstalled()) {
$templateFile = Mage::getDesign()->getTemplateFilename('request4quote/quote/create/items/grid_warehouse.phtml', array(
'_area' => $this->getArea(),
'_relative' => false
));
}else if ($this->helper('request4quote')->isOpenendedInstalled()) {
$templateFile = Mage::getDesign()->getTemplateFilename('request4quote/quote/create/items/grid_openended.phtml', array(
'_area' => $this->getArea(),
'_relative' => false
));
} else {
$templateFile = Mage::getDesign()->getTemplateFilename('request4quote/quote/create/items/grid_original.phtml', array(
'_area' => $this->getArea(),
'_relative' => false
));
}
require($templateFile);
